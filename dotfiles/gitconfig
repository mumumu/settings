[user]
    name = Yoshinari Takaoka
    email = mumumu@mumumu.org
[core]
    editor = vim
    pager = lv -c
    excludesfile = ~/.gitignore
[diff]
	tool = wdiff
[color]
    # color setting
    # the following command output is automatically colored
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[alias]
    # command alias
    co = checkout
    br = branch
    ci = commit
    st = status
    di = diff
    gr = grep
    pu = pull
    # commit log graph
    # @see http://qiita.com/peccul/items/90dd469e2f72babbc106
    gp = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
